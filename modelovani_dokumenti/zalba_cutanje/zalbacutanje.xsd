<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified"
    targetNamespace="http://zalbacutanje" xmlns:obavestenje="http://obavestenje"
    xmlns:zalbacutanje="http://zalbacutanje" xmlns:zhtv="http://zahtev" xmlns:tipovi="http://tipovi">
    <xs:import namespace="http://tipovi" schemaLocation="../tipovi.xsd"/>
    <xs:element name="Zalba_cutanje">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="Primalac_zalbe" type="tipovi:TPoverenik"/>
                <xs:element ref="zalbacutanje:Zalba"/>
            </xs:sequence>
            <xs:attribute name="id" type="xs:ID"/>
            <xs:attribute name="datum" type="xs:date"/>
            <xs:attribute name="mesto" type="xs:string"/>
        </xs:complexType>
    </xs:element>
    <xs:element name="Zalba">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="Osnova_zalbe" type="zalbacutanje:TZakonska_osnova"/>
                <xs:element name="Naziv_organa" type="xs:string"/>
                <xs:element name="Razlog_zalbe">
                    <xs:simpleType>
                        <xs:restriction base="xs:string">
                            <xs:enumeration value="Nije postupio"/>
                            <xs:enumeration value="Nije postupio u celosti"/>
                            <xs:enumeration value="U zakonskom roku"/>
                        </xs:restriction>
                    </xs:simpleType>
                </xs:element>
                <xs:element name="Datum" type="xs:date"/>
                <xs:element name="Podaci_o_zahtevu" type="xs:string"/>
                <xs:element name="Podnosilac_zalbe" type="tipovi:TLice_kontakt"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:complexType name="TZakonska_osnova">
        <xs:sequence>
            <xs:element fixed="22" name="Clan" type="xs:positiveInteger"/>
            <xs:element name="Zakon" type="xs:string"
                fixed="Закон о слободном приступу информацијама од јавног значаја"/>
        </xs:sequence>
    </xs:complexType>
</xs:schema>
